{
  "compilerOptions": {
    "target": "ES2020",                   // modern output
    "module": "CommonJS",                   // keep import/export
    "moduleResolution": "Node",           // Node-style resolution
    "esModuleInterop": true,              // allow default import
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
